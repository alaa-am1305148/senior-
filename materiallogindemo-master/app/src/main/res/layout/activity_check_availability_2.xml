        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="500dp"
            android:background="@drawable/bacground1"
            android:padding="12dp">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/btnMap"
                android:layout_marginTop="23dp"
                android:text="Select a Spot Number"
                android:textColor="#4383cc"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/SpotSpinner"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView11"
                android:layout_alignEnd="@+id/btnMap" />

            <Button
                android:id="@+id/btnMap"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_below="@+id/SpotSpinner"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="21dp"
                android:background="@drawable/rounded_button"
                android:padding="12dp"
                android:text="Get Directions"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/btnMap"
                android:layout_below="@+id/btnMap"
                android:layout_marginTop="19dp"
                android:text="Current Occupancy Trend"
                android:textColor="#4383cc"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/SpotSpinner2"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/bargraph2"
                android:layout_below="@+id/textView14"
                android:layout_marginTop="12dp"
                tools:layout_editor_absoluteX="180dp"
                tools:layout_editor_absoluteY="282dp" />


            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/bargraph2"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_alignStart="@+id/textView14"
                android:layout_below="@+id/SpotSpinner2"
                android:layout_marginTop="20dp"></com.github.mikephil.charting.charts.BarChart>


